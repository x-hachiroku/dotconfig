[Unit]
ConditionPathIsMountPoint=/mnt/solar
ConditionPathIsMountPoint=/mnt/rabbithole


[Service]
Restart=always
RestartSec=10


[Install]
WantedBy=default.target


[Container]
ContainerName=tgsync
Image=localhost/tgsync

Volume=${HOME}/containers/tgsync/appdata:/appdata
Volume=/mnt/rabbithole/repo/tg:/media
Volume=/mnt/solar/repo/tg:/incomplete
Volume=/etc/localtime:/etc/localtime:ro

Pod=postgres.pod
